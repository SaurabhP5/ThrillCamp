<%- include("../partials/header.ejs")%>

    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
               <div class="panel panel-primary">
                   <div class="panel-heading">
                       <h1>Create a New Campground</h1>   
                   </div>
                   <div class="panel-body">
                    <form action="/campgrounds" method="POST">
                        <div class="form-group">
                            <input class="form-control" type="text" name="name" placeholder="Enter Image Name">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="image" placeholder="image url">
                        </div>
                        <div class="form-group">
                            <textarea rows="3" cols="72" name="description" class="form-control">   
                            Add description here
                            </textarea>
                        </div>
                        <a href="/campgrounds">Go Back</a>
                        </form>
                   </div>
                   <div class="panel-footer">
                       <button class="btn btn-lg btn-primary btn-block">Create</button>
                   </div>
                   
               </div>
           </div>     
       </div>
    </div>    

<%- include("../partials/footer.ejs")%>